---
import FacebookIcon from "../components/IconFacebook.astro";
import InstagramIcon from "../components/IconInstagram.astro";
import TwitterIcon from "../components/IconTwitter.astro";
import LogoIcon from "./IconLogo.astro";

interface Props {
  theme?: "gold";
}

const { theme } = Astro.props;

const socials = [
  {
    name: "Modern Art Gallery on Facebook",
    href: "https://www.facebook.com/",
    icon: FacebookIcon,
  },
  {
    name: "Modern Art Gallery on Instagram",
    href: "https://www.instagram.com/",
    icon: InstagramIcon,
  },
  {
    name: "Modern Art Gallery on Twitter",
    href: "https://twitter.com/",
    icon: TwitterIcon,
  },
];
---

<footer data-theme={theme}>
  <div class="footer__content">
    <p>
      <LogoIcon class="footer__logo" />
      <span class="sr-only">Modern Art Gallery</span>
    </p>
    <p class="footer__body">
      The Modern Art Gallery is free to all visitors and open seven days a week
      from <time datetime="08:00">8am</time> to <time datetime="21:00">9pm</time
      >. Find us at 99 King Street, Newport, USA.
    </p>
    <ul class="footer__socials" role="list">
      {
        socials.map((social) => {
          return (
            <li>
              <a href={social.href}>
                <social.icon class="footer__social-icon" />
                <span class="sr-only">{social.name}</span>
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</footer>

<style>
  footer {
    font: var(--weight-light) 1rem / 1.625rem var(--font-body);
    background: var(--color-almost-black);
    color: var(--color-white);
  }

  footer[data-theme="gold"] {
    background: var(--color-gold);
    color: var(--color-almost-black);
  }

  footer[data-theme="gold"] a:focus-visible,
  footer[data-theme="gold"] a:hover {
    color: var(--color-white);
  }

  @screen desktop {
    footer {
      font: var(--text-body-s);
    }
  }

  a:focus-visible,
  a:hover {
    @apply transition-colors;

    color: var(--color-gold);
  }

  .footer__content {
    box-sizing: content-box;
    max-inline-size: 69.375rem;
    margin-inline: auto;
    padding: 3rem 2rem;
    display: grid;
    gap: 2.375rem;
  }

  .footer__logo {
    height: 2.5rem;
  }

  @screen desktop {
    .footer__logo {
      height: 3.625rem;
    }
  }

  .footer__socials {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.25rem;
  }

  .footer__social-icon {
    width: 1.25rem;
  }

  @screen tablet {
    .footer__content {
      padding: 3.5rem 2.5rem;
      grid-template-columns: max-content 1fr minmax(auto, 26.875rem) 2fr max-content;
      align-items: start;
    }

    .footer__body {
      grid-column: 3;
    }

    .footer__socials {
      grid-column: 5;
    }
  }

  @screen desktop {
    .footer__content {
      padding-block: 5rem;
    }
  }
</style>
