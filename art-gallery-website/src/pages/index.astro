---
import Base from "../layouts/Base.astro";
import Footer from "../components/Footer.astro";
import Picture from "../components/Picture.astro";
import Button from "../components/Button.astro";
---

<!-- todo: alt/figure for all images -->
<Base>
  <main>
    <div class="hero">
      <div class="hero__content">
        <div class="hero__text">
          <h1>Modern Art Gallery</h1>
          <p>
            The arts in the collection of the Modern Art Gallery all started
            from a spark of inspiration. Will these pieces inspire you? Visit us
            and find out.
          </p>
          <p>
            <Button href="/location">Our location</Button>
          </p>
        </div>
        <div class="hero__image">
          <Picture alt="" name="image-hero" extension="jpg" />
        </div>
      </div>
    </div>
    <h2>Your day at the gallery</h2>
    <p>
      Wander through our distinct collections and find new insights about our
      artists. Dive into the details of their creative process.
    </p>
    <Picture alt="" name="image-grid-1" extension="jpg" />
    <Picture alt="" name="image-grid-2" extension="jpg" />
    <Picture alt="" name="image-grid-3" extension="jpg" />
    <div class="inspired">
      <h2>Come &amp; be inspired</h2>
      <p>
        Weâ€™re excited to welcome you to our gallery and see how our collections
        influence you.
      </p>
    </div>
  </main>
  <Footer />
</Base>

<style>
  h1 {
    font: var(--weight-black) 3.75rem / 3.4375rem var(--font-display);
  }

  @screen tablet {
    h1 {
      font: var(--weight-black) 4.375rem / 4.0625rem var(--font-display);
    }
  }

  @screen desktop {
    h1 {
      font: var(--text-heading-xl);
    }
  }

  h2 {
    font: var(--weight-black) 3.125rem / 2.8125rem var(--font-display);
  }

  @screen desktop {
    h2 {
      font: var(--text-heading-m);
    }
  }

  .hero__content {
    display: grid;
  }

  .hero__text {
    margin-top: 2rem;
    padding-inline: 1rem;
  }

  .hero__text > * + * {
    margin-top: 2rem;
  }

  .hero__image {
    order: -1;
  }

  @screen tablet {
    .hero__content {
      grid-template-columns: 1fr 3rem 1fr;
    }

    .hero__text {
      grid-column: 2 / -1;
      grid-row: 1;
      align-self: center;
      margin-top: 0;
      padding-inline: 0 2.5rem;
    }

    .hero__text > * + * {
      margin-top: 3rem;
    }

    .hero__image {
      grid-column: 1 / 3;
      grid-row: 1;
    }
  }

  @screen desktop {
    .hero {
      background: linear-gradient(
        to right,
        var(--color-almost-black) 50%,
        var(--color-white) 50%
      );
    }

    .hero__content {
      position: relative;
      box-sizing: content-box;
      max-width: 69.375rem;
      margin-inline: auto;
      padding-inline: 2.5rem;
      grid-template-columns: 1fr 1fr;
    }

    .hero__text {
      grid-column: 2;
      grid-row: 1;
      place-self: start end;
      margin-top: 11.875rem;
      padding: 0;
      max-width: 21.875rem;
    }

    .hero__text > * + * {
      margin-top: 4rem;
    }

    .hero__text > *:nth-child(2) {
      margin-top: 0;
    }

    .hero h1 {
      position: absolute;
      left: 2.5rem;
      max-width: min(28.125rem, 50%);
      color: var(--color-white);
      /* todo: effect is not blend mode */
      mix-blend-mode: difference;
    }

    .hero__image {
      grid-column: 1 / -1;
      grid-row: 1;
      place-self: stretch center;
    }
  }

  .inspired {
    background: var(--color-almost-black);
    color: var(--color-white);
  }

  .inspired h2 {
    color: inherit;
  }
</style>
