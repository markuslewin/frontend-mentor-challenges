---
interface Props {
  class?: string;
  name: string;
  alt: string;
  width: number;
  height: number;
}

const { class: className, name, alt, width, height } = Astro.props;
---

<div class={className}>
  <svg
    class="icon"
    aria-hidden="true"
    focusable="false"
    viewBox={`0 0 ${width} ${height}`}
  >
    <use href={`/sprite.svg#${name}`}></use>
  </svg>
  <span class="sr-only">{alt}</span>
</div>
